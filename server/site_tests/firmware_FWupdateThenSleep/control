AUTHOR = "ChromeOS Team"
NAME = "firmware_FWupdateThenSleep"
METADATA = {
        "contacts": ["chromeos-faft@google.com", "jbettis@chromium.org"],
        "bug_component": "b:792402", # ChromeOS > Platform > Enablement > Firmware > FAFT
        "criteria": "firmware update then sleep and wake"
}
ATTRIBUTES = "suite:faft_bios_ro_qual, suite:faft_bios_rw_qual"
DEPENDENCIES = "servo_state:WORKING"
TIME = "MEDIUM"
TEST_TYPE = "server"
JOB_RETRIES = 0

DOC = """
RO+RW firmware update using chromeos-firmwareupdate --mode=recovery --wp=0, then
sleep and wake, then make sure the host responds and the flash contents
don't change.

Example:
test_that --board=BOARD --args 'servo_host=SERVO_IP' DUT_IP firmware_FWupdateThenSleep
"""

from autotest_lib.client.common_lib import utils

args_dict = utils.args_to_dict(args)
servo_args = hosts.CrosHost.get_servo_arguments(args_dict)

def run_firmwareupdate(machine):
    # Setup the client machine.
    host = hosts.create_host(machine, servo_args=servo_args)
    job.run_test('firmware_FWupdateThenSleep', host=host, cmdline_args=args)

parallel_simple(run_firmwareupdate, machines)
