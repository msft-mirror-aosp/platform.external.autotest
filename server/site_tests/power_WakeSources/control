# Test expects to be run on a jailbroken device in developer mode.

# Description
# Tests the following
#     1. Wakes by input devices trigger a full wake.
#     2. Wake by RTC triggers a dark resume.

NAME = "power_WakeSources"
METADATA = {
    "contacts": ["chromeos-platform-power@google.com",
                 "ravisadineni@google.com"],
    "bug_component": "b:1361410",
    "criteria": "",
    "hw_agnostic": False
}
TEST_TYPE = "server"
DEPENDENCIES = "servo_state:WORKING"
ATTRIBUTES = "suite:power_build, group:release-health, release-health_power"

from autotest_lib.server import utils

args_dict = utils.args_to_dict(args)
servo_args = hosts.CrosHost.get_servo_arguments(args_dict)

def run(machine):
    host = hosts.create_host(machine, servo_args=servo_args)
    job.run_test("power_WakeSources", host=host)

parallel_simple(run, machines)
