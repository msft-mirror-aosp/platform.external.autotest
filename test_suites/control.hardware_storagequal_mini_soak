args_dict['add_experimental'] = True
args_dict['timeout_mins'] = 720 # entire suite timeout is 12 hours
args_dict['max_runtime_mins'] = 720 # one test timeout is 12 hours
args_dict['name'] = NAME
args_dict['job'] = job

dynamic_suite.reimage_and_run(**args_dict)
