    "contacts": ["chromeos-platform-power@google.com"],
    "author": "ChromeOS Team",
    "bug_component": "b:167191",
    "criteria": "This test is a functional test",
    "hw_agnostic": False,
}
ATTRIBUTES = ("")
TEST_TYPE = "client"

job.run_test('power_SuspendToIdle', force_suspend_to_idle=True,
             tag=NAME.split('.')[1])
