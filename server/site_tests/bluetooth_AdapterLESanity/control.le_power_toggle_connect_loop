from autotest_lib.server import utils

AUTHOR = 'chromeos-bluetooth'
NAME = 'bluetooth_AdapterLESanity.le_power_toggle_connect_loop'
PURPOSE = ('Batch of Bluetooth LE sanity tests')
CRITERIA = 'Pass all sanity test'
ATTRIBUTES = 'suite:bluetooth_flaky'
TIME = 'MEDIUM'
TEST_CATEGORY = 'Functional'
TEST_CLASS = 'bluetooth'
TEST_TYPE = 'server'
DEPENDENCIES = 'bluetooth, working_bluetooth_btpeer:1'

DOC = """ Toggle adapter power and verify peer devices can reconnect. """

args_dict = utils.args_to_dict(args)
btpeer_args = hosts.CrosHost.get_btpeer_arguments(args_dict)

def run(machine):
    host = hosts.create_host(machine)
    job.run_test('bluetooth_AdapterLESanity', host=host,
                 num_iterations=1, btpeer_args=btpeer_args,
                 test_name=NAME.split('.')[1])

parallel_simple(run, machines)
