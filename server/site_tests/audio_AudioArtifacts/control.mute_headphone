from autotest_lib.client.cros.audio import audio_test_data
from autotest_lib.client.cros.chameleon import chameleon_audio_ids
from autotest_lib.server import utils

NAME = "audio_AudioArtifacts.mute_headphone"
METADATA = {
    "contacts": ["chromeos-audio-sw@google.com"],
    "bug_component": "b:875558",
    "criteria": "This test will fail if the recorded audio contains artifacts",
    "doc" : " Tests headphone audio artifacts against DUT after suspend"
}
TEST_TYPE = "server"
#ATTRIBUTES = "suite:audio_advanced"
DEPENDENCIES = "chameleon, audio_board, test_audiojack"
JOB_RETRIES = 1

args_dict = utils.args_to_dict(args)
chameleon_args = hosts.CrosHost.get_chameleon_arguments(args_dict)

def run(machine):
    host = hosts.create_host(machine, chameleon_args=chameleon_args)
    job.run_test("audio_AudioArtifacts", host=host, tag="headphone",
                 golden_file=audio_test_data.FREQUENCY_TEST_FILE,
                 source_id=chameleon_audio_ids.CrosIds.HEADPHONE,
                 sink_id=None,
                 mute_duration_in_secs=[1.0, 1.0],
                 recorder_id=chameleon_audio_ids.ChameleonIds.LINEIN
                )

parallel_simple(run, machines)
