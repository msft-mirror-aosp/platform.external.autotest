TEST_TYPE = "client"

args_dict = utils.args_to_dict(args)
pdash_note = args_dict.get('pdash_note', '')
job.run_test('power_Idle', pdash_note=pdash_note, force_discharge='optional',
             tast_bundle_path=args_dict.get('tast_bundle_path'))
