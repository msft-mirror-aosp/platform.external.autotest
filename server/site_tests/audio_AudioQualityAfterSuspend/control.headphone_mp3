from autotest_lib.client.cros.audio import audio_test_data
from autotest_lib.client.cros.chameleon import chameleon_audio_ids
from autotest_lib.server import utils

NAME = "audio_AudioQualityAfterSuspend.headphone.mp3"
METADATA = {
    "contacts": ["chromeos-audio-bugs@google.com"],
    "bug_component": "b:875558",
    "criteria": "This test will fail if the captured audio does not match original file.",
    "doc" : "This test remotely headphone audio function against DUT after suspend."
}
TEST_TYPE = "server"
#ATTRIBUTES = "suite:audio_advanced"
DEPENDENCIES = "test_audiojack, chameleon_state:WORKING"
JOB_RETRIES = 1

args_dict = utils.args_to_dict(args)
chameleon_args = hosts.CrosHost.get_chameleon_arguments(args_dict)
test_file = ('http://commondatastorage.googleapis.com/chromiumos-test-assets-'
             'public/audio_test/chameleon/Headphone/test_256_16.mp3')

def run(machine):
    host = hosts.create_host(machine, chameleon_args=chameleon_args)
    job.run_test("audio_AudioQualityAfterSuspend", host=host,
                 audio_test_data=audio_test_data.MEDIA_HEADPHONE_TEST_FILE,
                 lowpass_freq=4000,
                 test_playback_file=test_file,
                 bind_from=chameleon_audio_ids.CrosIds.HEADPHONE,
                 bind_to=chameleon_audio_ids.ChameleonIds.LINEIN,
                 audio_nodes=(['HEADPHONE'],[ 'MIC']), tag="headphone")

parallel_simple(run, machines)
