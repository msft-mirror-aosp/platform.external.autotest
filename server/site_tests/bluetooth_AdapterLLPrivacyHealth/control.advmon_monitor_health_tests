#  Tests advertisement monitor object health.
#
# Purpose: batch of Bluetooth Advertisement Monitor tests with LL privacy
# turned on

# Deprecated variables:
#     TIME = 'MEDIUM'
#     TEST_CATEGORY = 'Functional'

from autotest_lib.server import utils

NAME = 'bluetooth_AdapterLLPrivacyHealth.advmon_monitor_health_tests'
METADATA = {
    'contacts': ['chromeos-bt-team@google.com'],
    # ChromeOS > Platform > Connectivity > Bluetooth
    'bug_component': 'b:167317',
    'criteria': 'All tests should pass',
    'hw_agnostic': False,
    'life_cycle_stage': 'owner_monitored',
}


ATTRIBUTES = 'suite:bluetooth'
TEST_TYPE = 'server'
DEPENDENCIES = 'bluetooth_state:NORMAL'


args_dict = utils.args_to_dict(args)

def run(machine):
    host = hosts.create_host(machine)
    job.run_test('bluetooth_AdapterLLPrivacyHealth',
                 host=host,
                 num_iterations=1,
                 peer_required=False,
                 test_name=NAME.split('.')[1])

parallel_simple(run, machines)
