# Enables hardware write protect, attempts to flash the RO fingerprint firmware,
# and verifies that the flashing fails.

from autotest_lib.server import utils

NAME = "firmware_Fingerprint.RWNoUpdateRO"
METADATA = {
    "contacts": ["chromeos-fingerprint@google.com"],
    "bug_component": "b:782045",
    "criteria": "Fails if the RO firmware can be written while HW write protect is enabled.",
}

ATTRIBUTES = "suite:fingerprint"
TEST_TYPE = "server"
DEPENDENCIES = "servo_state:WORKING, fingerprint"
HW_DEPS = ['biod']
JOB_RETRIES = 0

# This test uses futility and dev keys from autotest/files/server/cros/faft.
REQUIRE_SSP = True

args_dict = utils.args_to_dict(args)
servo_args = hosts.CrosHost.get_servo_arguments(args_dict)

test_images = ["TEST_IMAGE_DEV"]


def run(machine):
    host = hosts.create_host(machine, servo_args=servo_args)
    job.run_test(
        "firmware_Fingerprint",
        host=host,
        test_exe="rw_no_update_ro.sh",
        test_exe_args=test_images,
        tag="RWNoUpdateRO",
    )


parallel_simple(run, machines)
