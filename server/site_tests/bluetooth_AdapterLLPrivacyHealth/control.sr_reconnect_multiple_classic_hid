#  Single run of a Suspend-Resume health testcase.
#
# Purpose: Single run of a test with ll privacy turned on

# Deprecated variables:
#     TIME = 'SHORT'
#     TEST_CATEGORY = 'Functional'

from autotest_lib.server import utils

NAME = 'bluetooth_AdapterLLPrivacyHealth.sr_reconnect_multiple_classic_hid'
METADATA = {
    'contacts': ['chromeos-bt-team@google.com'],
    # ChromeOS > Platform > Connectivity > Bluetooth
    'bug_component': 'b:167317',
    'criteria': 'Pass test',
    'hw_agnostic': False,
}


ATTRIBUTES = 'suite:bluetooth'
TEST_TYPE = 'server'
DEPENDENCIES = 'bluetooth, working_bluetooth_btpeer:2'


args_dict = utils.args_to_dict(args)

def run(machine):
    host = hosts.create_host(machine)
    job.run_test('bluetooth_AdapterLLPrivacyHealth', host=host, num_iterations=1,
                 args_dict=args_dict, test_name=NAME.split('.')[1])

parallel_simple(run, machines)
