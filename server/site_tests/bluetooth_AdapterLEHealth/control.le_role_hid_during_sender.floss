# Tests HID capability during Sender role.
# A device in Sender role will need to connect to a device in Receiver role.
# This test checks that while connected, it can also initiate a connection to
# a HID device. Both connections will be in primary role.

from autotest_lib.server import utils

NAME = 'bluetooth_AdapterLEHealth.le_role_hid_during_sender.floss'
METADATA = {
    'contacts': ['chromeos-bt-team@google.com'],
    # ChromeOS > Platform > Connectivity > Bluetooth
    'bug_component': 'b:167317',
    'criteria': 'Tests controller can accept HID connection during Sender role',
    'hw_agnostic': False
}
ATTRIBUTES = 'suite:bluetooth_floss'
TEST_TYPE = 'server'
DEPENDENCIES = 'bluetooth, working_bluetooth_btpeer:2'

args_dict = utils.args_to_dict(args)

def run(machine):
    host = hosts.create_host(machine)
    job.run_test('bluetooth_AdapterLEHealth', host=host,
                 num_iterations=1, args_dict=args_dict,
                 test_name=NAME.split('.')[1], floss=True)

parallel_simple(run, machines)